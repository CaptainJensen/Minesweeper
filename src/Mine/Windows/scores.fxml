<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Mine.ScoresController">
   <children>
      <ListView fx:id="easyScoresList" focusTraversable="false" layoutY="100.0" prefHeight="300.0" prefWidth="200.0" />
      <ListView fx:id="medScoresList" focusTraversable="false" layoutX="200.0" layoutY="100.0" prefHeight="300.0" prefWidth="200.0" />
      <ListView fx:id="hardScoresList" focusTraversable="false" layoutX="400.0" layoutY="100.0" prefHeight="300.0" prefWidth="200.0" />
      <Text fill="#05e177" layoutX="84.0" layoutY="87.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Easy">
         <font>
            <Font name="Yuanti SC Bold" size="19.0" />
         </font>
      </Text>
      <Text fill="#e5eb42" layoutX="270.0" layoutY="87.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Medium">
         <font>
            <Font name="Yuanti SC Bold" size="19.0" />
         </font>
      </Text>
      <Text fill="#f25858" layoutX="484.0" layoutY="86.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hard">
         <font>
            <Font name="Yuanti SC Bold" size="19.0" />
         </font>
      </Text>
      <Text layoutX="233.0" layoutY="45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Highscores">
         <font>
            <Font name="Yuanti SC Bold" size="29.0" />
         </font>
      </Text>
      <Text fx:id="informationTxt" layoutY="39.0" strokeType="OUTSIDE" strokeWidth="0.0" text="&lt;Information&gt;" textAlignment="CENTER" visible="false" wrappingWidth="233.93115234375" />
      <Button fx:id="clearButton" layoutX="525.0" layoutY="20.0" mnemonicParsing="false" onAction="#clearHighscoresClick" text="Clear" textAlignment="CENTER">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="Yuanti SC Regular" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
